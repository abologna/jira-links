<?xml version="1.0" encoding="UTF-8" ?>
<Module>

  <ModulePrefs title="JIRA Links" directory_title="JIRA Links"
      screenshot="http://github.com/fernandezpablo85/Links/raw/master/plugin/src/main/resources/gadget/img/screenshot.png"
      thumbnail="http://github.com/fernandezpablo85/Links/raw/master/plugin/src/main/resources/gadget/img/thumbnail.png">
    <Require feature="minimessage" />
    <Require feature="dynamic-height" />
    <Optional feature="gadget-directory">
      <Param name="categories">JIRA</Param>
    </Optional>
  </ModulePrefs>

<Content type="html">

<![CDATA[

    <link type="text/css" rel="stylesheet" href="http://github.com/fernandezpablo85/Links/raw/master/plugin/src/main/resources/gadget/style/list.css"></link>
    <link type="text/css" rel="stylesheet" href="http://github.com/fernandezpablo85/Links/raw/master/plugin/src/main/resources/gadget/style/buttons.css"></link> 
  
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
    <script type="text/javascript" src="http://github.com/fernandezpablo85/Links/raw/master/plugin/src/main/resources/gadget/js/links.js"></script>
    <script type="text/javascript" src="http://github.com/fernandezpablo85/Links/raw/master/plugin/src/main/resources/gadget/js/list.js"></script>
    <script type="text/javascript" src="http://github.com/fernandezpablo85/Links/raw/master/plugin/src/main/resources/gadget/js/buttons.js"></script>
  
    <div id="container">
      <div id="link-list"/>
    </div>

      <div id="commands">
        <div id="forms">
	        <div class="pop-form" id="new-link-form">
            <h2>Add link:</h2>
            <form id="link-form" action="">
              <label for="link">Link:</label><br/>
              <input type="text" id="link" name="link" />
            </form>
          </div>

	        <div class="pop-form" id="new-delicious-link-form">
            <h2>Add del.icio.us link:</h2>
            <h3>Import a bunch del.icio.us links</h3>
            <form id="delicious-form" action="">
              <label for="user">User:</label><br/>
              <input type="text" id="user" name="user"/><br/>
              <label for="tag">Tag:</label><br/>
              <input type="text" id="tag" name="tag"/><br/>
            </form>
          </div>
        </div>

        <div id="button-pad">
          <button type="button" name="new-link" id="new-link">Add Link</button>
          <button type="button" name="new-delicious-link" id="new-delicious-link">Add Delicious Link</button>
        </div>
      </div>
      <br style="clear:both"/>
    </div>  


]]>
   </Content>
</Module>